generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?  @unique
  password  String
  userType  UserType @default(ADMIN)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum UserType {
  ADMIN
  USER
}
