generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  phone     String?  @unique
  password  String
  userType  UserType @default(ADMIN)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Room {
  id               Int         @id @default(autoincrement())
  title            String
  description      String
  rate             Int
  underMaintenance Boolean     @default(false)
  thumbnailName    String
  images           RoomImage[]
  facilities       Facility[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model RoomImage {
  id     Int    @id @default(autoincrement())
  name   String
  room   Room   @relation(fields: [roomId], references: [id])
  roomId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model Facility {
  id     Int    @id @default(autoincrement())
  name   String
  room   Room   @relation(fields: [roomId], references: [id])
  roomId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

enum UserType {
  ADMIN
  USER
}
